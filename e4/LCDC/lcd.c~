#include <io.h>
#include <alcd.h>
#include <delay.h>
#include <stdio.h>
#include <stdint.h>
int32_t i=-213;
char buffer[30];
void main(void)
{
DDRA=255;
lcd_init(16);
while (1)
    {
    // Please write your application code here 
    sprintf(buffer,"number=%d",i);
     lcd_puts("Hello!");  
     i++;
     delay_ms(300);
     lcd_clear();
    }
}
